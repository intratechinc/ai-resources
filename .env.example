# Intratech Cybersecurity Suite Configuration
# Copy this file to .env and fill in your actual API keys

# Security Settings
SECRET_KEY=your-secret-key-here
DEBUG=True

# Database Configuration
DATABASE_URL=sqlite:///cybersecurity_suite.db

# Redis Configuration (for caching and task queue)
REDIS_URL=redis://localhost:6379/0

# AI/LLM Configuration
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here
DEFAULT_LLM_MODEL=gpt-4-turbo-preview

# Security API Keys
SHODAN_API_KEY=your-shodan-api-key-here
VIRUSTOTAL_API_KEY=your-virustotal-api-key-here
CENSYS_API_ID=your-censys-api-id-here
CENSYS_API_SECRET=your-censys-api-secret-here

# Notification Configuration (Optional)
SLACK_WEBHOOK_URL=your-slack-webhook-url-here
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your-email@gmail.com
EMAIL_PASSWORD=your-app-password

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/cybersecurity_suite.log

# Agent Configuration
AGENT_UPDATE_INTERVAL=60
MAX_CONCURRENT_TASKS=10
TASK_TIMEOUT=300

# Security Scanning Configuration
NMAP_SCAN_TIMEOUT=300
VULN_SCAN_THREADS=5
PENTEST_TIMEOUT=3600

# Threat Intelligence Configuration
THREAT_INTEL_UPDATE_INTERVAL=3600
IOC_RETENTION_DAYS=90

# Network Monitoring Configuration
NETWORK_SCAN_INTERVAL=300
PACKET_CAPTURE_DURATION=60

# Compliance Configuration
COMPLIANCE_SCAN_INTERVAL=86400

# File Upload Configuration
MAX_FILE_SIZE=104857600
UPLOAD_FOLDER=uploads/

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ACCESS_TOKEN_EXPIRES=3600
JWT_REFRESH_TOKEN_EXPIRES=2592000

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_DEFAULT=100 per hour

# CORS Configuration
CORS_ORIGINS=*

# WebSocket Configuration
WEBSOCKET_PING_INTERVAL=25
WEBSOCKET_PING_TIMEOUT=60

# MCP Server Configuration
NUCLEI_PATH=/usr/local/bin/nuclei
NUCLEI_TEMPLATES_PATH=./nuclei-templates
NMAP_PATH=/usr/bin/nmap